<%
  rating_class = 'not-available'
  rating_text = 'N/A'
  if !@movie.rt_rating.nil? && @movie.rt_rating > 0
    rating_class = @movie.rt_rating > 50 ? 'rating-fresh' : 'rating-rotten' 
    rating_text = @movie.rt_rating.to_s + '%'
  end
%>
  <div class="movie-info"> 
  <div class="rating <%= rating_class %>">
    <%= h(rating_text) %>
  </div>
  <h1><%= h(@movie.rt_title) %></h1>
  
  <div class="left-pane">
    <img width="144" height="204" src="<%= h(@movie.rt_img) %>" class="movie-image" />
    <div class="movie-links">
      <%= link_to 'Torrentz', @movie.tz_link, :id => 'movie_tz_link' %>
      <br/>
      <%= link_to 'RottenTomatoes', @movie.rt_link, :id => 'movie_rt_link' %>
    </div>
  </div>
  <%= @movie.rt_info %>
</div>